<body>
    <div class="head">
        <label for="" id="bn"></label>
    </div>
    <div class="move">
        <h1>
        <span>In</span>
        <span>Your</span>
        <span>Profile</span>
        <span>you</span>
        <span>can</span>
        <span>show</span>
        <span>your</span>
        <span>activites</span>
        <span>also,</span>
        <span>you</span>
        <span>will</span>
        <span>see</span>
        <span>your</span>
        <span>posts</span>
        <span>jobs</span>
        <span>and</span>
        <span>the response on your</span>
        <span>posts jobs.</span>
       
    </h1>

    </div>
    <button class="bnm1">show My posts job</button>
    <button class="bnm2">show the response</button>
    <script>
        const lb = document.querySelector("#bn")
        const name = localStorage.getItem("username")
        lb.textContent = "Welcome" + " " + name

        const btn1 = document.querySelector(".bnm1")
        const btn2 = document.querySelector(".bnm2")
        btn1.addEventListener("click", () => {
            window.location = "http://localhost:3000/ownposts"
        })
        btn2.addEventListener("click", () => {
            window.location = "http://localhost:3000/ownresponse"
        })

        fetch("http://localhost:3000/profile", {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
        }).then((res) => res.json())
            .then((data) => {
                console.log(data)

            }).catch((e) => {
                console.log(e)
            })
    </script>

