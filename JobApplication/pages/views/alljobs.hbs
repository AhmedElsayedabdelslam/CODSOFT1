<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>alljobs</title>
    <link rel="shortcut icon" href="https://th.bing.com/th/id/OIP.sCn6ZB3LL7VVvcMfQ9YqzwHaH0?rs=1&pid=ImgDetMain"
        type="image/x-icon">
    <script src="
https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js
"></script>
    <link href="
https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css
" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
    <style>
        .head {
            width: 100%;
            height: 80px;
            color: white;
            background-color: #1d443f;
            font-size: 28px;
        }

        .search {
            margin-top: 100px;
            height: 100px;
            width: 70%;
            margin: auto;
            display: flex;
            justify-content: space-around;

                {
                    {
                    !-- background-color: black;
                    --
                }
            }

        }

        .vb {
            width: 70%;
            opacity: 0.5;
            height: 60px;
            border-radius: 20px;
        }

        .se {
            width: 100px;
            height: 60px;
            background-color: #1d443f;
            color: white;
            border-radius: 10px;
        }

        #accordion {
            width: 90%;
            margin-top: 30px;
            margin: auto;
            visibility: hidden;

        }

        .hea {
            width: 100%;
            display: flex;
            justify-content: space-between;
            color: white;
        }


        .btn {
            width: 100%;
        }

        .bt {
            width: 130px;
            height: 40px;
            color: white;
            background-color: #1d443f;
            margin-left: 45%;
            border-radius: 20px;
        }

        .waviy {
            position: relative;
        }

        .waviy span {
            position: relative;
            display: inline-block;
            font-size: 40px;
            color: #fff;
            text-transform: uppercase;
            animation: flip 2s infinite;
            animation-delay: calc(.2s * var(--i))
        }

        @keyframes flip {

            0%,
            80% {
                transform: rotateY(360deg)
            }
        }
    </style>
</head>

<body>
    <div class="head">
        {{!-- <label for="" id="jobname">Find Your Job</label><br> --}}
        <div class="waviy">
            <span style="--i:1">F</span>
            <span style="--i:2">I</span>
            <span style="--i:3">N</span>
            <span style="--i:4">D</span>
            <span style="--i:5">-</span>
            <span style="--i:6">J</span>
            <span style="--i:7">B</span>
            <span style="--i:8">O</span>
            <span style="--i:9">S</span>
        </div>
    </div>

    <div class="search" style="margin-top: 50px;">
        <input type="text" class="vb" placeholder="Enter your job">
        <button class="se">search</button>
    </div>

    <div id="accordion">

        <div class="card">
            <div class="card-header" style="background-color: #1d443f;">
                <a class="btn" data-bs-toggle="collapse" href="#collapseOne">
                    <div class="hea">
                        <div class="details">
                            <h2></h2>
                            <h4>
                                </h>
                                <h5></h5>
                        </div>
                        <div class="image">
                            <img style="width: 120px; border-radius: 10px;" src="" alt="Reload">
                        </div>

                    </div>
                </a>
            </div>
            <div id="collapseOne" class="collapse show" data-bs-parent="#accordion">
                <div class="card-body" style="color: #1d443f;">
                    <h4>About Job</h4>
                    <p></p>
                    <hr>
                    <h4>Skills</h4>
                    <ol>
                        <li></li>
                        <li></li>
                        <li></li>
                        <li></li>
                    </ol>
                    <hr>
                    <h4>Salary</h4>
                    <span></span>
                    <hr>
                    <h4>Jib Type</h4>
                    <span></span><br><br>
                    <button class="bt" username="" companyName="" imageCompany="" jobName="" JobType="" salary=""
                        ownerid="">Apply</button>

                </div>
            </div>
        </div>
    </div>
    {{!-- /////////////// --}}



    <script>

        const search = document.querySelector(".se")
        search.addEventListener("click", () => {
            const jobName = document.querySelector(".vb").value
            const alljob = document.querySelector("#accordion")
            alljob.style.visibility = "visible"
            fetch("http://localhost:3000/alljobs", {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ jobName: jobName })
            }).then((res) => res.json())
                .then((data) => {
                    console.log(data)
                    function draw() {
                        let s = data.map((item) => {
                            return `
                               <div class="card">
        <div class="card-header" style="background-color: #1d443f;">
            <a class="btn" data-bs-toggle="collapse" href="#collapseOne">
                <div class="hea">
                    <div class="details">
                        <h2>${item.jobName}</h2>
                        <h4>${item.companyName}</h>
                            <h5>${item.username}</h5>
                    </div>
                    <div class="image">
                        <img style="width: 120px; border-radius: 10px;" src=${item.imageCompany} alt="Reload">
                    </div>

                </div>
            </a>
        </div>
        <div id="collapseOne" class="collapse show" data-bs-parent="#accordion">
            <div class="card-body" style="color: #1d443f;">
                <h4>About Job</h4>
                <p>${item.aboutJob}</p>
                <hr>
                <h4>Skills</h4>
                <ol>
                    <li>${item.skill1}</li>
                    <li>${item.skill2}</li>
                    <li>${item.skill3}</li>
                    <li>${item.skill4}</li>
                </ol>
                <hr>
                <h4>Salary</h4>
                <span>${item.salary}</span>
                <hr>
                <h4>Jib Type</h4>
                <span>${item.JobType}</span><br><br>
                <button class="bt"  username=${item.username} companyName=${item.companyName} imageCompany=${item.imageCompany} jobName=${item.jobName} JobType=${item.JobType} salary=${item.salary} ownerid=${item.idOwner}>Apply</button>

            </div>
        </div>
    </div>
                            


                            `
                        })
                        alljob.innerHTML = s

                    }
                    draw()

                    const btns = document.querySelectorAll('.bt');
                    Array.from(btns).forEach((btn) => {
                        btn.addEventListener("click", () => {
                            const ownerid = btn.getAttribute("ownerid")
                            const username = btn.getAttribute("username")
                            const companyName = btn.getAttribute("companyName")
                            const imageCompany = btn.getAttribute("imageCompany")
                            const jobName = btn.getAttribute("jobName")
                            const JobType = btn.getAttribute("JobType")
                            const salary = btn.getAttribute("salary")
                            console.log(ownerid, username, companyName, imageCompany, jobName, JobType, salary)
                            setTimeout(() => {
                                let url = new URL("http://localhost:3000/applyjob");
                                url.searchParams.set('username', username);
                                url.searchParams.set('companyName', companyName);
                                url.searchParams.set('imageCompany', imageCompany);
                                url.searchParams.set('jobName', jobName);
                                url.searchParams.set('JobType', JobType);
                                url.searchParams.set('salary', salary)
                                url.searchParams.set('owner', ownerid);
                                window.location = url
                            })
                        })


                    })
                })
        })


    </script>

</body>

</html>