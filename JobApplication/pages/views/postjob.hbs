<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post-Job</title>
    <link rel="shortcut icon" href="https://th.bing.com/th/id/OIP.sCn6ZB3LL7VVvcMfQ9YqzwHaH0?rs=1&pid=ImgDetMain"
        type="image/x-icon">
    <script src="
https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js
"></script>
    <link href="
https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css
" rel="stylesheet">
    <script src="https://cdn.cdnhub.io/jquery/3.7.1/jquery.min.js"></script>
</head>
<style>
    body {
        background-color: rgb(105, 155, 127);
    }

    .input-group {
        width: 90%;
        margin: auto;
    }

    .head {
        width: 100%;
        height: 80px;
        color: white;
        background-color: #1d443f;
        font-size: 28px;
    }

    h3 {
        padding-left: 70px;
    }

    button {

        margin-left: 47%;
    }
    h1 {
  color: hsl(0, 0%, 28%);
  font-size: 50px;
  font-weight: bold;
  font-family: monospace;
  letter-spacing: 7px;
  cursor: pointer;
}

h1 span {
  transition: 0.5s ease-out;
}
h1:hover span:nth-child(1) {
  margin-right: 5px;
}
h1:hover span:nth-child(1):after {
  {{!-- content: "'"; --}}
}
h1:hover span:nth-child(2) {
  margin-left: 30px;
}
h1:hover span {
  color: #fff;
  text-shadow: 0 0 10px #fff, 0 0 20px #fff, 0 0 40px #fff;
}
</style>

<body>
    <div class="head">
        <h1><span></span><span>post your job here</span></h1>
      
    </div><br><br>

    <div class="input-group input-group-lg">
        <span class="input-group-text" id="inputGroup-sizing-lg">Company-Name</span>
        <input type="text" class="form-control inp1" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-lg">
    </div><br>
    <div class="input-group input-group-lg">
        <span class="input-group-text" id="inputGroup-sizing-lg">Image-of-Company</span>
        <input type="text" class="form-control inp2" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-lg" placeholder="Url Only">
    </div><br>
    <div class="input-group input-group-lg">
        <span class="input-group-text" id="inputGroup-sizing-lg">Name-of-Job</span>
        <input type="text" class="form-control inp3" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-lg">
    </div><br>
    <div class="input-group input-group-lg">
        <span class="input-group-text" id="inputGroup-sizing-lg">About-the-job</span>
        <input type="text" class="form-control inp4" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-lg">
    </div><br>

    <h3 style="color: white;">Skills</h3>
    <div class="input-group input-group-sm mb-3">
        <span class="input-group-text" id="inputGroup-sizing-sm">Skiil1</span>
        <input type="text" class="form-control inp5" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-sm">
    </div>
    <div class="input-group input-group-sm mb-3">
        <span class="input-group-text" id="inputGroup-sizing-sm">Skiil2</span>
        <input type="text" class="form-control inp6" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-sm">
    </div>
    <div class="input-group input-group-sm mb-3">
        <span class="input-group-text" id="inputGroup-sizing-sm">Skiil3</span>
        <input type="text" class="form-control inp7" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-sm">
    </div>
    <div class="input-group input-group-sm mb-3">
        <span class="input-group-text" id="inputGroup-sizing-sm">Skiil4</span>
        <input type="text" class="form-control inp8" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-sm">
    </div>
    <hr>
    <div class="input-group input-group-lg">
        <span class="input-group-text" id="inputGroup-sizing-lg">Job-Type</span>
        <input type="text" class="form-control inp9" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-lg" placeholder="FullTime/PartTime">
    </div><br>
    <div class="input-group input-group-lg">
        <span class="input-group-text" id="inputGroup-sizing-lg">Salary</span>
        <input type="text" class="form-control inp10" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-lg">
    </div><br>
    <button type="button" class="btn btn-success">Publish</button>

    <script>

        const send = document.querySelector(".btn")

        send.addEventListener("click", () => {
            const id = localStorage.getItem("id")
            const username = localStorage.getItem("username")
            const email = localStorage.getItem("email")
            const companyName = document.querySelector(".inp1").value
            const imageCompany = document.querySelector(".inp2").value
            const jobName = document.querySelector(".inp3").value
            const aboutJob = document.querySelector(".inp4").value
            const skill1 = document.querySelector(".inp5").value
            const skill2 = document.querySelector(".inp6").value
            const skill3 = document.querySelector(".inp7").value
            const skill4 = document.querySelector(".inp8").value
            const JobType = document.querySelector(".inp9").value
            const salary = document.querySelector(".inp10").value
            console.log(companyName, imageCompany, jobName, skill1, skill2, skill3, skill4, JobType, salary)
            fetch("http://localhost:3000/postjob", {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ id: id, username: username, email: email, companyName: companyName, imageCompany: imageCompany, jobName: jobName, aboutJob: aboutJob, skill1: skill1, skill2: skill2, skill3: skill3, skill4: skill4, JobType: JobType, salary: salary })
            }).then((data) => {
                console.log(data)

            }).catch((e) => {
                console.log(e)
            })
            setTimeout(() => {
                let url = new URL("http://localhost:3000/applyjob");
                url.searchParams.set('username', username);
                url.searchParams.set('companyName', companyName);
                url.searchParams.set('imageCompany', imageCompany);
                url.searchParams.set('jobName', jobName);
                url.searchParams.set('JobType', JobType);
                url.searchParams.set('salary', salary)
                url.searchParams.set('owner', id);
                window.location = url
            })


        })




    </script>
</body>

</html>