<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>More details</title>
    <link rel="shortcut icon" href="https://th.bing.com/th/id/OIP.sCn6ZB3LL7VVvcMfQ9YqzwHaH0?rs=1&pid=ImgDetMain"
        type="image/x-icon">
        <script src="
    https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js
    "></script>
  <link href="
    https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css
    " rel="stylesheet">
    <style>
        .head {
            width: 100%;
            height: 80px;
            color: rgb(44, 104, 79);
            background-color: #1d443f;
            font-size: 28px;
        }

        span {
            color: #1d443f;
            font-size: 22px;
            font-weight: bold;
        }

        button {
            width: 180px;
            height: 50px;
            background-color: #1d443f;
            color: #ffffff;
            margin-left: 20px;
            cursor: pointer;
            border-radius: 20px;

        }

        .all {
            margin-top: 40px;
            width: 80%;
            margin: auto;
            height: 500px;
            border-radius: 20px;
            border: 1px solid #1d443f;
            padding-left: 30px;
        }

        label {
            font-size: 23px;
            font-weight: bold;
            padding-top: 20px;

        }

        h2 {
            position: relative;
            {{!-- font-size: 14vw; --}}
            color: #252839;
            -webkit-text-stroke: 0.3vw #383d52;
            text-transform: uppercase;
        }

        h2::before {
            content: attr(data-text);
            position: absolute;
            top: 0;
            left: 0;
            width: 0;
            height: 100%;
            color: #ffffff;
            -webkit-text-stroke: 0vw #383d52;
            border-right: 2px solid #01fe87;
            overflow: hidden;
            animation: animate 6s linear infinite;
        }

        @keyframes animate {


            0%,
            10%,
            100% {
                width: 0;
            }

            70%,
            90% {
                width: 100%;
            }
        }
        .fg {
             width: 400px;
            height: 50px;

        }
    </style>
</head>

<body>
    <div class="head">
        <div class="fg">
            <h2 data-text="More-Details">More-Details</h2>
        </div>
    </div><br><br>
    <div class="all">
        <label for="">Client Name : </label><span class="sp1"></span><br><br><br><br>
        <label for="">Client Email :</label><span class="sp2"></span><br><br><br><br>
        <label for="">Client phone :</label><span class="sp3"></span><br><br><br><br>
        <label for="">Expected Salary :</label><span class="sp4"></span><br><br><br><br>
        <button class="btn"></button>


    </div>
    <script>
        const sp1 = document.querySelector(".sp1")
        const sp2 = document.querySelector(".sp2")
        const sp3 = document.querySelector(".sp3")
        const sp4 = document.querySelector(".sp4")
        const buttonImg = document.querySelector(".btn")
        const url = new URL(window.location.href);
        const params = new URLSearchParams(url.search);
        const yourname = params.get('yourname')
        const youremail = params.get('youremail')
        const phone = params.get('phone')
        const image = params.get('image')
        const expectedsalary = params.get('expectedsalary')


        sp1.innerHTML = yourname
        sp2.innerHTML = youremail
        sp3.innerHTML = phone
        sp4.innerHTML = expectedsalary
        buttonImg.innerHTML = image

        buttonImg.addEventListener("click", () => {
            setTimeout(() => {
                window.location = "http://localhost:3000/final/" + buttonImg.textContent
            })
        })
    </script>
</body>

</html>